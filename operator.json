{
  "name": "Cell Ranger",
  "description": "Imports Cell Ranger output files (scRNA-seq count data).",
  "tags": [
    "import",
    "sc-RNA-seq"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/read_cellranger_operator"
  ],
  "properties": [
    {
      "kind": "DoubleProperty",
      "name": "proportion",
      "defaultValue": 1,
      "description": "The proportion of cells to downsample (default is 1, no downsampling)."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Document ID",
            "type": "",
            "description": "Document ID of the ZIP file containing Cell Ranger output files.",
            "ontologyMapping": "documentId",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": []
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "OperatorJoinSpec",
        "description": "Sparse matrix output with gene and cell metadata",
        "joinOperators": [
          {
            "kind": "JoinOperator",
            "joinType": "left",
            "leftPair": {
              "kind": "ColumnPair",
              "lColumns": [
                "Document ID"
              ],
              "rColumns": [
                "Document ID"
              ]
            },
            "rightRelation": {
              "kind": "TableRelation",
              "attributes": [
                {
                  "kind": "Attribute",
                  "name": "gene_id",
                  "type": "int32"
                },
                {
                  "kind": "Attribute",
                  "name": "cell_id",
                  "type": "int32"
                },
                {
                  "kind": "Attribute",
                  "name": "value",
                  "type": "double"
                },
                {
                  "kind": "Attribute",
                  "name": "gene_names",
                  "type": "string"
                },
                {
                  "kind": "Attribute",
                  "name": "cell_names",
                  "type": "string"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}